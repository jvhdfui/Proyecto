<%- include("templates/encabezado.ejs", {titulo:"Inicio"}) %>

<style>
    body {
      font-family: 'Open Sans', sans-serif;
      background-size: cover;
      background-repeat: no-repeat;
      background-image: url("/fondo3.jpeg");
    }

    .receta-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid #e0e0e0;
        height: 100%;
        background: #FFD1D1;  
    }
    
    .receta-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 20px rgba(0,0,0,0.15);
    }
    
    .receta-imagen {
        height: 160px;
        background: #F94F94;  
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 2.5rem;
    }
    
    .categoria {
        background: #f0e6ff;
        color: #7F669D;
        padding: 6px 15px;
        border-radius: 15px;
        font-size: 0.85rem;
        font-weight: bold;
    }
    
    .btn-ver-mas {
        background: #B95E82;
        color: white;
        border: none;
    }
    
    .btn-ver-mas:hover {
        background: #6a5585;
        color: white;
    }
    
    .btn-action {
        background: #7F669D;
        color: white;
        border: none;
        padding: 15px 30px;
        font-weight: bold;
        transition: all 0.3s ease;
    }
    
    .btn-action:hover {
        background: #6a5585;
        transform: translateY(-2px);
    }

    .titulo-animado {
      text-align: center;
      margin-top: 60px;
      position: relative;
    }

    .titulo-animado h1 {
      font-family: 'Poppins', sans-serif;
      font-weight: bold;
      color: #D94392;
      font-size: 60px;
      text-transform: uppercase;
      letter-spacing: 2px;
      position: relative;
      display: inline-block;
      margin: 10px;
    }

    .rev-block {
      position: relative;
    }

    .rev-block span {
      opacity: 0;
      animation: appear-text 0.0001s linear forwards;
      animation-delay: 1.4s;
    }

    .rev-block:after {
      content: '';
      top: 0;
      left: 0;
      position: absolute;
      width: 0%;
      height: 100%;
      background: #00f0b5;
      animation: rev-block 1.5s cubic-bezier(0.19, 1, 0.22, 1) forwards;
      animation-delay: 1s;
    }

    #onemore span {
      animation-delay: 2s;
    }

    #onemore.rev-block:after {
      background: #5e239d;
      animation-delay: 1.4s;
    }

    @keyframes rev-block {
      0% { left: 0; width: 0%; }
      50% { left: 0; width: 100%; }
      100% { left: 100%; width: 0%; }
    }

    @keyframes appear-text {
      0% { opacity: 0; }
      100% { opacity: 1; }
    }

    @media only screen and (max-width: 900px) {
      .titulo-animado h1 {
        font-size: 28px;
      }
    }
</style>

<div class="titulo-animado">
    <h1 class="rev-block" font-size: 2.5rem;  margin-bottom: 10px; ">Bienvenido a CookLand</h1>
    <p class="lead"></p>
</div>


